{
    "name": "mdn-bob",
    "version": "0.0.0-semantically-released",
    "description":
        "Builder of Bits aka The MDN Web Docs interactive examples, example builder",
    "author": "Mozilla",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/mdn/bob.git"
    },
    "bugs": {
        "url": "https://github.com/mdn/bob/issues"
    },
    "homepage": "https://github.com/mdn/bob#readme",
    "main": "index.js",
    "scripts": {
        "build-css-bundle":
            "browserify editor/js/editable-css.js -o editor/js/editor-css-bundle.js",
        "build-js-bundle":
            "browserify editor/js/editable-js.js -o editor/js/editor-js-bundle.js",
        "build-tabbed-js-bundle":
            "browserify editor/js/editor.js -o editor/js/editor-bundle.js",
        "build-pages": "node index.js",
        "build":
            "npm-run-all build-css-bundle build-js-bundle build-tabbed-js-bundle build-pages",
        "cz": "git-cz",
        "start": "node index.js",
        "start-server": "http-server -p 4444 ./docs",
        "test": "jest",
        "semantic-release": "semantic-release",
        "travis-deploy-once": "travis-deploy-once",
        "precommit": "validate-commit-msg"
    },
    "jest": {
        "preset": "jest-puppeteer"
    },
    "keywords": ["javascript", "nodejs", "page-generator", "mdn", "mozilla"],
    "devDependencies": {
        "all-contributors-cli": "4.11.1",
        "browserify": "16.2.0",
        "commitizen": "2.9.6",
        "cz-conventional-changelog": "2.1.0",
        "http-server": "0.11.1",
        "husky": "0.14.3",
        "jest": "22.4.3",
        "jest-puppeteer": "2.4.0",
        "npm-run-all": "4.1.2",
        "puppeteer": "1.3.0",
        "semantic-release": "15.2.0",
        "travis-deploy-once": "5.0.0",
        "validate-commit-msg": "2.14.0"
    },
    "dependencies": {
        "clean-css": "^4.1.9",
        "concat": "^1.0.3",
        "cosmiconfig": "^5.0.0",
        "fs-extra": "^6.0.0",
        "glob": "^7.1.2",
        "node-dir": "^0.1.17",
        "npm": "^6.0.0",
        "semantic-release-cli": "^3.6.6",
        "uglify-es": "^3.3.9"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
